# MongoDB Atlas Connection String
# Replace <username>, <password>, and <cluster> with your actual MongoDB Atlas credentials
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/ingagi?retryWrites=true&w=majority

# JWT Secret Key (generate a strong random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# Payment Gateway Configuration (for future MTN/Airtel integration)
MTN_MONEY_API_KEY=your-mtn-money-api-key
MTN_MONEY_API_SECRET=your-mtn-money-api-secret
AIRTEL_MONEY_API_KEY=your-airtel-money-api-key
AIRTEL_MONEY_API_SECRET=your-airtel-money-api-secret

# Optional: Analytics and Monitoring
GOOGLE_ANALYTICS_ID=your-google-analytics-id
SENTRY_DSN=your-sentry-dsn
